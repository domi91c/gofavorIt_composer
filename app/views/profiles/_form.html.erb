
<%= form_for @profile, :html => { :multipart => true } do |f| %>





    <%= f.fields_for @profile.gallery do |ff| %>

        <div class="control-group">
          <%= ff.label :name, :class => 'control-label' %>
          <div class="controls">
            <%= ff.text_field :name, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= ff.label :description, :class => 'control-label' %>
          <div class="controls">
            <%= ff.text_field :description, :class => 'text_field' %>
          </div>
        </div>

        <div class="control-group">
          <%= ff.label :pictures, :class => 'control-label' %>
          <div class="controls">
            <!-- The magic is coming ...look at my eyes....shazammmm -->
            <%= file_field_tag "images[]", type: :file, multiple: true %>
          </div>
        </div>

    <% end %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  profiles_path, :class => 'button' %>
    </div>
<% end %>
